{
  "manifest_version": 3,
  "name": "Auto Transcript Collector",
  "version": "2.0",
  "description": "LIGHTWEIGHT: Simple START/STOP untuk deteksi URL transkrip (?o=). Resource-efficient!",
  "permissions": [
    "webRequest",
    "downloads",
    "clipboardWrite",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Transcript Collector - START/STOP"
  }
}