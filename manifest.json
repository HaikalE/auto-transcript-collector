{
  "manifest_version": 3,
  "name": "URL Monitor (?o= detector)",
  "version": "3.0",
  "description": "Automated DevTools Network inspector for URLs with ?o= parameter. Click to open, export list, monitor in real-time!",
  "permissions": [
    "webRequest",
    "downloads",
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "URL Monitor - DevTools Network automation"
  }
}