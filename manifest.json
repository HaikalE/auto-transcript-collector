{
  "manifest_version": 3,
  "name": "Auto Transcript Collector",
  "version": "1.2",
  "description": "Mendeteksi URL transkrip (?o=) dan secara otomatis mengambil kontennya.",
  "permissions": [
    "webRequest",
    "downloads",
    "clipboardWrite",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Transcript Collector"
  }
}