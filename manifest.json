{
  "manifest_version": 3,
  "name": "Auto Transcript Collector",
  "version": "2.2",
  "description": "MAJOR FIX: Non-blocking architecture using onCompleted. No more browser freeze!",
  "permissions": [
    "webRequest",
    "downloads",
    "clipboardWrite",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Transcript Collector v2.2 - Non-blocking"
  }
}